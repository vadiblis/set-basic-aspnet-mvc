@using set_basic_aspnet_mvc.Helpers
@model set_basic_aspnet_mvc.Models.PasswordChangeModel

@{
    ViewBag.Title = Html.LocalizationString("title_user_password_change");
}

<div class="col-md-5 col-md-offset-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span></span>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" action="/user/passwordchange" method="post" id="frm" name="frm">
                
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label hidden-xs">
                        @Html.LocalizationString("password")
                    </label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="password" placeholder="@Html.LocalizationString("password")" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-primary btn-md btn-block">@Html.LocalizationString("btn_password_change")</button>
                    </div>
                </div>
                
                <input type="hidden" name="token" id="token" value="@Model.Token" />
                <input type="hidden" name="email" id="email" value="@Model.Email" />
                
                @Html.AntiForgeryToken()
            </form>
        </div>
    </div>
</div>

@section script
{
    <script>
        $(function () {
            $("form#frm").validate({
                rules: {
                    password: {
                        required: true
                    }
                },
                messages: {
                    password: {
                        required: "*"
                    }
                }
            });
        });
    </script>
}